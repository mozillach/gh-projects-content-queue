{
  "name": "gh-projects-content-queue",
  "version": "2.0.0",
  "description": "A content curation queue based on GitHub projects",
  "main": "index.js",
  "scripts": {
    "test:js": "nyc -r lcov -r text ava",
    "test": "npm run lint && npm run test:js",
    "lint:js": "eslint index.js lib/ test/",
    "lint:docker": "dockerlint Dockerfile",
    "lint:ec": "eclint check $(git ls-files)",
    "lint": "npm run lint:js && npm run lint:docker",
    "coverage": "codecov --disable=gcov",
    "start": "node index.js",
    "migrate": "node scripts/migrate-v1-v2.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozillach/gh-projects-content-queue.git"
  },
  "keywords": [
    "twitter",
    "github",
    "projects",
    "content",
    "curation"
  ],
  "author": "Mozilla Switzerland (https://mozilla.ch)",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozillach/gh-projects-content-queue/issues"
  },
  "homepage": "https://github.com/mozillach/gh-projects-content-queue#readme",
  "engines": {
    "node": ">=8.0.0"
  },
  "devDependencies": {
    "ava": "^1.2.1",
    "codecov": "^3.1.0",
    "dockerlint": "^0.3.9",
    "eclint": "^2.8.1",
    "eslint": "^5.13.0",
    "eslint-import-resolver-node": "^0.3.2",
    "eslint-plugin-array-func": "^3.1.2",
    "eslint-plugin-ava": "^5.1.1",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^8.0.1",
    "nyc": "^13.2.0",
    "sinon": "^7.2.3",
    "temp-write": "^3.4.0"
  },
  "dependencies": {
    "@octokit/plugin-retry": "^2.1.2",
    "@octokit/plugin-throttling": "^2.4.0",
    "@octokit/rest": "^16.15.0",
    "ajv": "^6.8.1",
    "discourse-sdk": "^1.0.3",
    "emittery": "^0.4.1",
    "feedparser": "^2.2.9",
    "fetch-base64": "^2.1.2",
    "get-stream": "^4.1.0",
    "ical": "^0.5.0",
    "mz": "^2.7.0",
    "node-fetch": "^2.3.0",
    "tweet.md": "^2.2.1",
    "twitter": "^1.7.1",
    "twitter-text": "^3.0.0"
  },
  "nyc": {
    "exclude": [
      "**/node_modules/",
      "test"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
